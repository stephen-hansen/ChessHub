  "repository": {
    "type": "git",
    "url": "git+https://github.com/stephen-hansen/SE-181-Team-Project.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/stephen-hansen/SE-181-Team-Project/issues"
  },
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "eslint-plugin-react-app": "^6.2.2",
    "express": "^4.17.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
